<div class="container">
	<div class="relative border-t border-primary-3 px-[10.5px] pt-4 xl:pt-12">
		<div class="storySwiper relative overflow-x-hidden pb-12 2xl:pb-0">
			<div class="swiper-wrapper">
				<% teamSlides.forEach(function(slide) { %>
				<div class="swiper-slide px-3">
					<img
						class="mx-auto mb-6 size-[306px] rounded-xl object-cover xl:size-[282px]"
						src="<%= slide.imgSrc %>"
						alt="storyCover"
					/>
					<div>
						<h6 class="pb-2 text-h7 text-white xl:pb-6 xl:text-h5">
							<%= slide.time %>
						</h6>
						<p class="text-fs-6 text-primary-4">
							<%= slide.description %>
						</p>
					</div>
				</div>
				<% }); %>
			</div>
			<!-- Add Pagination -->
			<div class="swiper-pagination !bottom-0 py-1 2xl:hidden"></div>
		</div>		
	</div>
</div>
