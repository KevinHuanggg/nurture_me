	}
]; %>
<div class="relative px-[28px] 2xl:container">
	<div class="teamSwiper relative overflow-x-hidden pb-12 xl:pb-[72px]">
		<div class="swiper-wrapper">
			<% teamSlides.forEach(function(slide) { %>
			<div class="swiper-slide">
				<img
					class="mx-auto mb-4 size-40 rounded-full object-cover xl:mb-6 xl:size-[200px]"
					src="<%= slide.imgSrc %>"
					alt="members"
				/>
				<div class="px-3 xl:px-4">
					<h6
						class="mb-3 border-b border-primary-4 pb-3 text-center text-h7 text-primary-1 xl:text-h4"
					>
						<%= slide.members %>
					</h6>
					<p class="text-fs-6 text-primary-3 xl:text-fs-4">
						<%= slide.description %>
					</p>
				</div>
			</div>
			<% }); %>
		</div>
		<!-- Add Pagination -->
		<div class="swiper-pagination !bottom-0 py-1 xl:py-2"></div>
	</div>
	<!-- Add Navigation -->
	<div class="3xl:block hidden">
		<div
			class="swiper-button-next !-right-14 !top-[175px] !mt-0 !size-20 bg-[url('/assets/svg/arrow/arrowNext.svg')] bg-cover after:hidden"
		></div>
		<div
			class="swiper-button-prev !-left-14 !top-[175px] !mt-0 !size-20 bg-[url('/assets/svg/arrow/arrowPrev.svg')] bg-cover after:hidden"
		></div>
	</div>
</div>
